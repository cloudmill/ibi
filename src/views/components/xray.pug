mixin xray
  svg.xray(class=attributes.class preserveAspectRatio='xMidYMid slice')
    defs
      radialGradient#gradient
        stop(offset='75%' stop-color='white' stop-opacity='1')
        stop(offset='100%' stop-color='white' stop-opacity='0')
      mask#mask
        ellipse.xray__ellipse(fill='url(#gradient)')

    image.xray__image(
      data-href='assets/images/xray-above.jpg'
      preserveAspectRatio='xMidYMid slice'
    )
    image.xray__image(
      data-href='assets/images/xray-under.jpg'
      preserveAspectRatio='xMidYMid slice'
      mask='url(#mask)'
    )