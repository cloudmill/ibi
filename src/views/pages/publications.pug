extends ../layouts/master.pug

include ../components/_header.pug
include ../components/_footer.pug

block content 
  section.section.section--gradient
    .row
      .row__col
        .section__inner.section__inner--top
          .articles-authors.my-sticky
            .team-filter
              ul.team-filter__container
                li.team-filter__item.team-filter__item--active(data-id="doctor") #все
                li.team-filter__item(data-id="dentist") #исследования
                li.team-filter__item(data-id="admin") #статьи
                li.team-filter__item(data-id="coordinator") #центр
                li.team-filter__item(data-id="doctor") #инновации
                li.team-filter__item(data-id="dentist") #научная деятельность
                li.team-filter__item(data-id="admin") #публикации сми
                li.team-filter__item(data-id="coordinator") #кейсы
              button.team-filter__reset
                +reset-svg('team-filter__reset-ico')
                |Сбросить
            .articles-authors__container
              .articles-authors__title 
                |Авторы статей
              ul.articles-authors__list 
                - for (i = 0; i < 3; i++)
                  li.articles-authors__item
                    .article-author 
                      .article-author__row 
                        .article-author__col
                          .article-author__img 
                            img.article-author__image(src="assets/images/article-author-1.jpg", alt="")
                          .article-author__label 
                            |14 статей
                        .article-author__col
                          .article-author__name 
                            |Шмойлов Андрей Евгеньевич
                          .article-author__prof 
                            |Главный врач центра
      .row__col
        .section__inner.section__inner--top
          .container 
            h1.title
              |Публикации
