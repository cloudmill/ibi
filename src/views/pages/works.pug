extends ../layouts/master.pug

include ../components/_header.pug
include ../components/_footer.pug

block content 
  section.section.section--gradient(data-sticky-container)
    .row 
      .row__col 
        .section__inner.section__inner--top
          .team-filter.team-filter--md.my-sticky
            ul.team-filter__container
              li.team-filter__item.team-filter__item--active(data-id="doctor") #врачи
              li.team-filter__item(data-id="dentist") #зубныетехники
              li.team-filter__item(data-id="admin") #администраторы
              li.team-filter__item(data-id="coordinator") #координаторы
            button.team-filter__reset
              +reset-svg('team-filter__reset-ico')
              |Сбросить
      .row__col 
        .section__inner.section__inner--top
          .container
            h1.title 
              |До и после
            .team-filter.team-filter-mobile
              .team-filter__container
                a.team-filter__item.team-filter__item--active(href="#") #врачи
                a.team-filter__item(href="#") #зубныетехники
                a.team-filter__item(href="#") #администраторы
                a.team-filter__item(href="#") #координаторы
              button.team-filter__reset
                +reset-svg('team-filter__reset-ico')
                |Сбросить
            .section__block.section__block--small
              ul.works 
                - for (let i=0; i<6; i++)
                  li.works__item
                    .operation-card.operation-card--responsive
                        .operation-card__row
                          .operation-card__col
                            .operation-card__image
                              img.operation-card__img(src=`assets/images/index/operation-${i % 2 + 1}.jpeg`)
                          .operation-card__col
                            .operation-card__content
                              .operation-card__block
                                .operation-card__top
                                  .operation-card__top-row
                                    .operation-card__top-col
                                      .operation-card__info
                                        .operation-card__price
                                          |456 000 ₽
                                        .operation-card__visits
                                          |4 визита
                                    .operation-card__top-col
                                      .operation-card__rating
                                        ul.operation-card__rating-list
                                          - for (let i=0; i<5; i++)
                                            li.operation-card__rating-item(class=(i < 3 ? 'operation-card__rating-item--active' : ''))
                                              +svg-rating(class='operation-card__rating-svg')
                                .tags.operation-card__tags
                                  ul.tags__list
                                    li.tags__item
                                      a.tags__tag(href='#')
                                        |#имплантация
                                    li.tags__item
                                      a.tags__tag(href='#')
                                        |#протезирование
                                h3.operation-card__title
                                  |Жильцов Сергей Васильевич
                                .operation-card__desc
                                  .operation-card__desc-block
                                    h6.operation-card__desc-title.operation-card__desc-title--red
                                      |Проблема
                                    p.operation-card__desc-text
                                      |Отсутствием зубов на верхней и нижней челюсти и серьезной атрофией костной ткани.
                                  .operation-card__desc-block
                                    h6.operation-card__desc-title
                                      |Предложенное решение
                                    p.operation-card__desc-text
                                      |По результатам врачебного консилиума было принято решение проводить базальную имплантацию.
                              .operation-card__bottom
                                .operation-card__bottom-row
                                  .operation-card__bottom-col
                                    ul.operation-card__links
                                      li.operation-card__link
                                        .mission__missions-links-container
                                          a.mission__missions-links-link(href='#')
                                            +svg-link.mission__missions-links-svg.button-svg
                                            .mission__missions-links-text
                                              span.mission__missions-links-span
                                                |Подробнее
              .news-show-more
                button.news-show-more-btn
                  +arrow-link-svg('news-show-more-ico')
                  .news-show-more-txt Показать еще