extends ../layouts/master.pug

include ../components/_header.pug
include ../components/_footer.pug



block header
  +header


block content
  section.section.section--gradient
      .row
        .row__col
          .section__inner.section__inner--top
            .nav
              .nav__container
                nav.nav__nav.my-sticky
                  ul.nav__list
                    each item in ['Strategic Implant', 'Обучение']
                      li.nav__item
                        a.nav__link(href='#')
                          |#{item}
                    li.nav__item.nav__item--active
                      a.nav__link(href='#')
                        |Библиотека
                    each item in ['Юридическая помощь', 'Наши разработки']
                      li.nav__item
                        a.nav__link(href='#')
                          |#{item}
                  .team-filter.filter-tags-hover
                    ul.team-filter__container
                      li.team-filter__item.team-filter__item--active(data-id="doctor") #книги
                      li.team-filter__item(data-id="dentist") #журналы
                      li.team-filter__item(data-id="admin") #публикации
                      li.team-filter__item(data-id="coordinator") #методички
                    button.team-filter__reset
                      +reset-svg('team-filter__reset-ico')
                      |Сбросить
        .row__col
          .section__inner.section__inner--top
            .container
              h1.title
                |Библиотека
              .library-cards
                - for (let i=0; i<9; i++)
                  a.card(href='#')
                    .card__top
                      h3.card__title
                        |Основы зубопротезной техники. Учебное пособие
                      //- p.card__text
                      //-   |IBI Lab — современная цифровая зуботехническая лаборатория на базе Института Базальной Имплантации.
                      .library-cards__img
                        img(src="assets/images/library-1.jpg", alt="")
                    .card__bottom
                      .card__row
                        .card__col
                          .tags
                            ul.tags__list
                              li.tags__item
                                .tags__tag
                                  |#журнал
                              li.tags__item
                                .tags__tag
                                  |#методичка
                              li.tags__item
                                .tags__tag
                                  |#центр
                          .card__date
                            |PDF
                        .card__col
                          .card__image.mission__missions-links-link
                            +svg-link(class='card__svg button-svg')
                include ../components/show-more-button
