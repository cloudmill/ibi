mixin footer(opts={linkLogo: true})

  footer.footer&attributes(attributes.attributes)
    .container
      .footer__inner
        .footer__grid.footer__grid--mobile
          .footer__block
            .footer__logo
            if (opts.linkLogo) 
              a.footer__logo-link(href="")
                +svg-logo.footer__logo-svg(mod='white')
            else
              .footer__logo-link
                +svg-logo.footer__logo-svg(mod='white')
          .footer__block
            ul.footer__links
              li.footer__links-item
                .footer__links-wrapper
                  a.footer__links-link(href='tel:84994906349')
                    |8 499 490 63 49
                p.footer__links-caption
                  |Бесплатно по России
              li.footer__links-item
                .footer__links-wrapper
                  a.footer__links-link(href='mailto:info@ibi.clinic')
                    |info@ibi.clinic
                p.footer__links-caption
                  |По любым вопросам
